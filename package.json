{
  "name": "poker-verse",
  "version": "1.0.0",
  "description": "PokerVerse Game Platform",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon server/index.js",
    "client:dev": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "start": "node server/index.js",
    "test": "jest",
    "lint": "eslint . --ext .js,.ts,.vue",
    "setup": "npm install && cd client && npm install",
    "db:init": "node server/scripts/initDatabase.js",
    "redis:init": "node server/scripts/initRedis.js",
    "project:setup": "node server/scripts/setup.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "express-rate-limit": "^6.8.1",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.1",
    "moment": "^2.29.4",
    "mongoose": "^7.4.0",
    "redis": "^4.6.7",
    "socket.io": "^4.7.2",
    "uuid": "^9.0.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/node": "^20.4.2",
    "concurrently": "^8.2.0",
    "eslint": "^8.45.0",
    "jest": "^29.6.1",
    "nodemon": "^3.0.1",
    "supertest": "^7.1.4"
  },
  "keywords": [
    "game",
    "cards",
    "zha-jin-hua",
    "websocket",
    "multiplayer"
  ],
  "author": "Poke Game Team",
  "license": "MIT"
}